@model userDashboard_project.Models.RegisterViewModel

@{
    ViewData["Title"] = "Home Page";
}
<h1>Register:</h1>
@{
    if (TempData["Error"] != null)
    {
<p style="color: Red;">@TempData["Error"]</p>
    }
}

<form asp-controller="Home" asp-action="Register" method="post">
    
    <span style="color: Red;" asp-validation-for="FirstName"></span>
    <br>
    <label asp-for="FirstName"></label>
    <input style="margin-left: 50px;" asp-for="FirstName"/>
    <br>
    <br>
    <span style="color: Red;" asp-validation-for="LastName"></span>
    <br>
    <label asp-for="LastName"></label>
    <input style="margin-left: 50px;" asp-for="LastName"/>
    <br>
    <br>
    <span style="color: Red;" asp-validation-for="Email"></span>
    <br>
    <label asp-for="Email"></label>
    <input style="margin-left: 75px;" asp-for="Email"/>
    <br>
    <br>
    <span style="color: Red;" asp-validation-for="Password"></span>
    <br>
    <label asp-for="Password"></label>
    <input style="margin-left: 50px;" asp-for="Password"/>
    <br>
    <br>
    <span style="color: Red;" asp-validation-for="Confirm"></span>
    <br>
    <label asp-for="Confirm"></label>
    <input style="margin-left: 50px;" asp-for="Confirm"/>
    <br>
    <br>
    <button style="margin-left: 115px;" type="submit">Create new User</button>
</form>
<br>
<a href="LoginP">Already have an account? Login</a>