<h2>Add a new customer</h2>
@{
    if (TempData["Error"] != null)
    {
<p style="color: Red;">@TempData["Error"]</p>
    }
}

<form action="AddC" method="post">

    <label for="AddC">Customer Name:</label>
    <input  name="Name" type="text"/>

    <button type="submit">Add</button>
</form>

<br>
<br>

<table>
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Created Date</th>
            <th>Actions</th>
            
        </tr>
    </thead>
@{
    foreach(var x in ViewBag.Customers)
    {
        <tr>
            <td>@x.Name</td>
            <td>@x.createdat</td>
            <td><form action="RemoveC/@x.CustomerID" method="get">

            <button style="background-color: Red;" type="submit">Remove</button>
        </form></td>
            

        </tr>
    }
}
    </tbody>