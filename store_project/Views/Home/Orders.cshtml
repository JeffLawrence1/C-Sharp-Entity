    <label for="Customer"></label>
        <select name="CustomerID">
@{
    foreach(var x in @ViewBag.Customers)
    {
            
            <option value="@x.CustomerID">@x.Name</option>   
            
    }
}
        </select>
        
    <br>
    <h4>Order:</h4>
    <label for="Order"></label>
        <select name="Quantity">
