            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
        <select name="ProductID">
@{
    foreach(var o in @ViewBag.Products)
    { 
        

        <option value="@o.ProductID">@o.Name</option>

        
    }
}  
        </select>
        <br>
        <br>

    <button type="submit">Order</button>
</form>
