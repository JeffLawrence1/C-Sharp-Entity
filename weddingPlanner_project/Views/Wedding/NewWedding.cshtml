@model weddingPlanner_project.Models.WeddingViewModel

@{
    ViewData["Title"] = "Home Page";
}
<p style="margin-left: 450px;"><a href="/Dash">Dash</a>&emsp;<a href="/logout">Logout</a></p>
<h1>Plan Your Wedding</h1>


<form asp-controller="Wedding" asp-action="NewWedding" method="post">
    
    <span asp-validation-for="Bride"></span>
    <br>
    <label asp-for="Bride"></label>
    <input style="margin-left: 50px;" asp-for="Bride"/>
    <br>
    <br>
    <span asp-validation-for="Groom"></span>
    <br>
    <label asp-for="Groom"></label>
    <input style="margin-left: 50px;" asp-for="Groom"/>
    <br>
    <br>
    <span asp-validation-for="Date"></span>
    <br>
    <label asp-for="Date"></label>
    <input style="margin-left: 75px;" type="date" asp-for="Date"/>
    <br>
    <br>
    <span asp-validation-for="Address"></span>
    <br>
    <label asp-for="Address"></label>
    <input style="margin-left: 50px;" asp-for="Address"/>
    <br>
    <br>
    <button style="margin-left: 115px;" type="submit">Create</button>
</form>
